{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "RAILPACK",
        "buildCommand": null
    },
    "deploy": {
        "preDeployCommand": [
            "bun run db:migrate"
        ],
        "runtime": "V2",
        "startCommand": "bun run start:server",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 100,
        "overlapSeconds": 10,
        "drainingSeconds": 10,
        "restartPolicyType": "ON_FAILURE"
    }
}