{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "bun run server:build"
  },
  "deploy": {
    "runtime": "V2",
    "startCommand": "bun run server:start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "overlapSeconds": 10,
    "drainingSeconds": 10,
    "restartPolicyType": "ON_FAILURE"
  }
}
