{
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"lingui.config.ts",
		"vite.config.ts",
		"pwa-assets.config.ts"
	],
	"compilerOptions": {
		"target": "ES2022",
		"jsx": "react-jsx",
		"module": "ESNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"types": ["vite/client"],
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		/* Linting */
		"skipLibCheck": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true,
		"baseUrl": ".",
		"paths": {
			"@/panda/*": ["./styled-system/*"],
			"@/*": ["./src/*"],
			"~/*": ["./*"]
		}
	}
}
