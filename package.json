{
	"name": "dair",
	"type": "module",
	"private": true,
	"workspaces": [
		"api",
		"client",
		"packages/*"
	],
	"scripts": {
		"check:deadcode": "NODE_ENV=deadcode knip-bun",
		"start:server": "docker compose -f docker-compose.server.yml up --build",
		"stop:server": "docker compose -f docker-compose.server.yml down",
		"start:client": "docker compose -f docker-compose.client.yml up --build",
		"stop:client": "docker compose -f docker-compose.client.yml down",
		"dev": "docker compose -f docker-compose.dev.yml up --build",
		"dev:stop": "docker compose -f docker-compose.dev.yml down",
		"lint": "oxfmt && oxlint --type-aware --fix --fix-suggestions",
		"check:format": "oxfmt --check",
		"check:lint": "oxlint --type-aware",
		"prepare": "husky"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@typescript/native-preview": "^7.0.0-dev.20251120.1",
		"husky": "^9.1.7",
		"knip": "^5.70.1",
		"lint-staged": "^16.2.7",
		"oxfmt": "^0.14.0",
		"oxlint": "^1.29.0",
		"oxlint-tsgolint": "^0.8.0"
	},
	"lint-staged": {
		"**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": "oxlint --type-aware --fix --fix-suggestions"
	},
	"packageManager": "bun@1.2.17"
}