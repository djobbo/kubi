{
  "name": "dair",
  "version": "0.0.0",
  "devDependencies": {
    "@effect/cli": "^0.72.1",
    "@effect/platform-bun": "^0.86.0",
    "@types/bun": "latest",
    "@typescript/native-preview": "^7.0.0-dev.20251204.1",
    "effect": "^3.19.8",
    "effect-solutions": "^0.4.13",
    "husky": "^9.1.7",
    "knip": "^5.71.0",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.16.0",
    "oxlint": "^1.31.0",
    "oxlint-tsgolint": "^0.8.3",
    "syncpack": "^14.0.0-alpha.29",
    "turbo": "^2.6.3"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": "oxlint --type-aware --fix --fix-suggestions"
  },
  "packageManager": "bun@1.3.3",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check:deadcode": "NODE_ENV=deadcode knip-bun",
    "check:format": "oxfmt --check",
    "check:lint": "oxlint --type-aware --type-check",
    "check:types": "turbo run check:types",
    "compose": "bun run scripts/compose.ts",
    "compose:down": "bun run scripts/compose.ts down",
    "compose:up": "bun run scripts/compose.ts up --wait",
    "dev": "turbo run dev",
    "lint": "oxfmt && syncpack format && syncpack fix && oxlint --type-aware --type-check --fix --fix-suggestions",
    "prepare": "husky",
    "server:start": "turbo run start --filter=@dair/api",
    "test": "turbo run test"
  },
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
