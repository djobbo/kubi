{
  "name": "dair",
  "version": "0.0.0",
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "@typescript/native-preview": "^7.0.0-dev.20251126.1",
    "effect-solutions": "^0.4.13",
    "husky": "^9.1.7",
    "knip": "^5.70.2",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.15.0",
    "oxlint": "^1.30.0",
    "oxlint-tsgolint": "^0.8.3",
    "syncpack": "^14.0.0-alpha.29",
    "turbo": "^2.6.1"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": "oxlint --type-aware --fix --fix-suggestions"
  },
  "packageManager": "bun@1.3.3",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check:deadcode": "NODE_ENV=deadcode knip-bun",
    "check:format": "oxfmt --check",
    "check:lint": "oxlint --type-aware --type-check",
    "check:types": "turbo run check:types",
    "dev": "turbo run dev",
    "lint": "oxfmt && syncpack format && syncpack fix && oxlint --type-aware --type-check --fix --fix-suggestions",
    "prepare": "husky",
    "test": "turbo run test"
  },
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}