{
	"name": "@dair/api",
	"type": "module",
	"types": "./src/index.ts",
	"scripts": {
		"dev": "bun run db:migrate && bun run --hot src/index.ts",
		"start": "bun run db:migrate && bun run src/index.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "bun db:generate && drizzle-kit migrate",
