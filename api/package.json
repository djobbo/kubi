		"check:types": "tsc --noEmit",
		"build": "tsc"
	},
	"dependencies": {
		"@dair/brawlhalla-api": "workspace:*",
		"@dair/brawlhalla-servers": "workspace:*",
		"@dair/schema": "workspace:*",
		"@hono/swagger-ui": "^0.5.2",
		"@hono/zod-validator": "^0.7.0",
		"@libsql/client": "^0.15.9",
		"@t3-oss/env-core": "^0.13.8",
		"arctic": "^3.7.0",
		"drizzle-orm": "^0.44.2",
		"hono": "^4.7.11",
		"hono-openapi": "^0.4.8",
		"pino": "^9.7.0",
		"pino-pretty": "^13.0.0",
		"prom-client": "^15.1.3",
		"zod": "^3.25.63",
		"zod-openapi": "^4.2.4"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"drizzle-kit": "^0.31.1"
	}
