{
	"name": "@dair/api",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/src/index.d.ts"
		}
	},
	"scripts": {
		"dev": "bun run db:migrate && bun run --hot src/index.ts",
		"start": "bun run db:migrate && bun run src/index.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "bun db:generate && drizzle-kit migrate",
		"studio": "drizzle-kit studio",
		"check:types": "tsc --noEmit",
		"build": "tsc --build"
	},
	"dependencies": {
		"@dair/brawlhalla-api": "workspace:*",
		"@dair/brawlhalla-servers": "workspace:*",
		"@dair/schema": "workspace:*",
		"@hono/swagger-ui": "^0.5.2",
		"@hono/zod-openapi": "^1.1.0",
		"@hono/zod-validator": "^0.7.2",
		"@libsql/client": "^0.15.10",
		"@t3-oss/env-core": "^0.13.8",
		"arctic": "^3.7.0",
		"drizzle-orm": "^0.44.4",
		"hono": "4.8.2",
		"pino": "^9.7.0",
		"pino-pretty": "^13.1.1",
		"prom-client": "^15.1.3",
		"stoker": "^1.4.3",
		"zod": "^3.25.76",
		"zod-openapi": "^4.2.4"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"drizzle-kit": "^0.31.4"
	}
}
